<div class="container">
  <div class="container-inner inner-default clearfix">
    <% @items.each do |item| %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            <% # 商品画像 %>
            <% if imageUrl = item['mediumImageUrls'].first['imageUrl'] %>
              <%= image_tag(mediumImage_to_largeImage(imageUrl) , alt: item['itemName']) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: item['itemName']) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <% # 商品タイトル %>
            <%= item['itemName'] %>
          </p>
        </div>
        <div class="action clearfix">
          <% local_item = Item.find_by(item_code: item['itemCode']) %>
          <% if local_item and current_user.want?(local_item) %>
            <%= render 'unwant', item: local_item %>
          <% else %>
            <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Want") ,
                        :class => "btn-want btn btn-danger btn-sm want",
                        :item_code => "want-#{item['itemCode']}",
                        :remote => true,
                        :method => :post %>
          <% end %>
          <% if local_item and current_user.have?(local_item) %>
            <%= render 'unhave', item: local_item %>
          <% else %>
            <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Have") ,
                        :class => "btn-have btn btn-warning btn-sm have",
                        :item_code => "have-#{item['itemCode']}",
                        :remote => true,
                        :method => :post %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
