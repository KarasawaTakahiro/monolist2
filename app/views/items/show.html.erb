<% content_for :head do %>
  <title><%= @item.title + ' - monolist' %></title>
  <%= tag "meta", {name: 'description',
                   content: (@item.description.present? ? @item.description : '') + @item.users.collect{|u| u.name}.join(' ')} %>
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
            <% if @item.large_image.present? %>
              <%= image_tag(@item.large_image , alt: @item.title) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: @item.title) %>
            <% end %>
        </div>
      </div>
      <div class="title">
        <% #TODO 商品タイトル %>
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <% @have_users.each do |have_user| %>
            <%= link_to have_user do %>
              <span class="gravatar">
                <%= gravatar_for(have_user, {size: 20}) %>
              </span>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <% @want_users.each do |want_user| %>
            <span class="gravatar">
              <%= gravatar_for(want_user, {size: 20}) %>
            </span>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to('楽天詳細ページへ', @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
